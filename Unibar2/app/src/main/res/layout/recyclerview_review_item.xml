<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/userName_reviewListItem"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:text="@string/username"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reviewDescription_reviewListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName_reviewListItem"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/keyline_1_minus_8dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:text="@string/bar_description_label"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/ratingBar_reviewListItem"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_above="@+id/reviewDescription_reviewListItem"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-3dp"
                android:layout_marginEnd="-37dp"
                android:layout_marginRight="-37dp"
                android:layout_marginBottom="-8dp"
                android:isIndicator="true"
                android:numStars="5"
                android:scaleX="0.4"
                android:scaleY="0.4" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>